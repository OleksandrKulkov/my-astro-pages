---
interface Props {
	pageTitle: string;
	description?: string;
	image?: string;
}

const { pageTitle = "Чайна Хатинка", description = "Чай, Ча Дао, чайна традиція, майстерність і церемонія ґунфу ча, чайна кульрура та чайний етикет — у всі ці теми Чайна Хатинка доволі глибоко занурюється на своїх сторінках.", image } = Astro.props;
---

<head>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <title>{pageTitle}</title>
</head>